<%# 
    参数：
    {
        similiarRentItems: []
    }
%>
<div>
    <%if(similiarRentItems && similiarRentItems.length > 0){
        for(let i = 0; i < similiarRentItems.length; i++){
            let item = similiarRentItems[i];
    %>
        <a class="rent-item box" href="http://www.baidu.com">
            <div class="left">
                <img src="<%= item.houseImages && item.houseImages.length > 0 && item.houseImages[0] || ""%>">
            </div>
            <div class="right">
                <h4><%= item.houseTitle%></h4>
                <p class="base-info">                    
                    <%= item.houseTypeStr%> <%= item.spaceArea%>㎡ <%= item.district%> <%= item.town%>
                </p>

                <p class="tags">
                    <%if(item.houseTag){%>
                        <%if(item.houseTag.isSubwayHouse){%>
                            <span class="tag">近地铁</span>        
                        <%}%>
                        <%if(item.houseTag.isPriceDown){%>
                            <span class="tag">降价</span>        
                        <%}%>
                        <%if(item.houseTag.isNewHouse){%>
                            <span class="tag">新上</span>        
                        <%}%>
                        <%if(item.houseTag.isHardcover){%>
                            <span class="tag">精装</span>        
                        <%}%>
                        <%if(item.houseTag.isSouth){%>
                            <span class="tag">朝南</span>        
                        <%}%>                    
                    <%}%>
                </p>
                <p class="unit-price">
                    <%= item.rentPriceStr%> 元/月
                </p>
            </div>
        </a>
    <%
        }    
    %>
    <%}%>    
</div>