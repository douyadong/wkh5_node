<%#
    需要参数：
    {
        comments: []
    }
%>
<%
    let items = comments;
%>
<div class="subestate-comments">
    <%if(items && items.length > 0){
        for(let i = 0; i < items.length; i++){     
        let item = items[i];    
    %>
    <div class="subestate-comment box">
        <div class="left">
            <img src="<%= item.guest.avatar%>">
        </div>
        <div class="right">
            <p class="mobile">
                <%= item.guest.guestPhoneNum%>
            </p>
            <p class="datetime">
                <%= item.createTimeStr%>
            </p>
            <div class="content">
                <%= item.comment%>
                <%if(item.imgList && item.imgList.length > 0){
                %>
                    <div class="imgs">
                <%
                    for(let i = 0; i < item.imgList.length; i++){
                        let img = item.imgList[i];
                %><img class="preview-image-item" src="<%= img.url%>" ><%}%>
                </div>
                <%
                } 
                %>
            </div>
        </div>
    </div>    

    <%}}else{%>
     <div class="no-data">当前暂无评论</div>
    <%}%>
</div>